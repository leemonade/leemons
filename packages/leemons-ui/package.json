{
  "name": "leemons-ui",
  "version": "1.0.0",
  "homepage": "https://ui.leemons.io",
  "license": "MIT",
  "private": true,
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "author": {
    "email": "hi@leemons.io",
    "name": "Leemons Edtech Solutions",
    "url": "https://www.leemons.io"
  },
  "maintainers": [
    {
      "email": "hi@leemons.io",
      "name": "Leemons Edutech Solutions",
      "url": "https://www.leemons.io"
    }
  ],
  "scripts": {
    "dev": "next dev --port 3001",
    "index": "cp ./src/theme/index.js ./dist/theme/index.js",
    "colors": "cp -R ./src/theme/colors ./dist/theme",
    "fonts": "cp -R ./src/theme/fonts ./dist/theme",
    "prebase": "postcss --config temp/theme/base temp/theme/base/*.css --base temp --dir dist",
    "base": "cat dist/theme/base/*.css > dist/theme/base.css",
    "postbase": "prejss-cli dist/theme/base.css --format commonjs",
    "preutilities:global": "postcss --config temp/theme/utilities/global temp/theme/utilities/global/*.css --base temp --dir dist",
    "utilities:global": "cat dist/theme/utilities/global/*.css > dist/theme/utilities.css",
    "postutilities:global": "prejss-cli dist/theme/utilities.css --format commonjs",
    "preutilities:unstyled": "postcss --config temp/theme/utilities/unstyled temp/theme/utilities/unstyled/*.css --base temp --dir dist",
    "utilities:unstyled": "cat dist/theme/utilities/unstyled/*.css > dist/theme/utilities-unstyled.css",
    "postutilities:unstyled": "prejss-cli dist/theme/utilities-unstyled.css --format commonjs",
    "preutilities:styled": "postcss --config temp/theme/utilities/styled temp/theme/utilities/styled/*.css --base temp --dir dist",
    "utilities:styled": "cat dist/theme/utilities/styled/*.css > dist/theme/utilities-styled.css",
    "postutilities:styled": "prejss-cli dist/theme/utilities-styled.css --format commonjs",
    "components": "postcss --config temp/theme/components temp/theme/components/**/*.css --base temp --dir dist",
    "merge:unstyled": "cat dist/theme/components/unstyled/*.css > dist/theme/unstyled.css",
    "merge:styled": "cat dist/theme/components/unstyled/*.css dist/theme/components/styled/*.css > dist/theme/styled.css",
    "rtl": "rtlcss dist/theme/unstyled.css -s && rtlcss dist/theme/styled.css -s",
    "prejss": "prejss-cli dist/theme/{unstyled,styled}{,.rtl}.css --format commonjs",
    "themes": "postcss temp/theme/themes/index.css -o dist/theme/themes.css --config temp/theme/themes",
    "full": "postcss src/theme/full/index.css -o dist/theme/leemons.css --config src/theme/full",
    "prebuild": "rm -rf dist",
    "build": "NODE_ENV=production babel src --out-dir dist --copy-files && npm run build:theme",
    "postbuild": "npm run clean:temp && rm -rf dist/theme/base && rm -rf dist/theme/components && rm -rf dist/theme/utilities && rm -rf dist/theme/full &&  npm run full && mv dist/theme/leemons.css dist/theme/leemons.tmp && rm -rf dist/theme/*.css && rm -rf dist/theme/themes && mv dist/theme/leemons.tmp dist/theme/leemons.css",
    "clean:temp": "rm -rf temp",
    "prebuild:theme": "npm run clean:temp && mkdir temp && cp -R ./src/theme ./temp && npm run cleancss",
    "build:theme": "npm run index && npm run colors && npm run fonts && npm run base && npm run utilities:global && npm run utilities:unstyled && npm run utilities:styled && npm run components && npm run merge:unstyled && npm run merge:styled && npm run rtl && npm run prejss && npm run themes",
    "cleancss": "replace-in-file \"/\\/\\* :> \\*\\/[\\S\\s]*?\\/\\* <: \\*\\//gm\" \"\" temp/theme/**/**/*.css --isRegex"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.1",
    "@leemonade/react-dnd-treeview": "^1.5.44",
    "@popperjs/core": "^2.9.2",
    "@react-hook/window-size": "^3.0.7",
    "@tailwindcss/typography": "^0.4.1",
    "classnames": "^2.3.1",
    "glob": "^7.1.7",
    "immutability-helper": "^3.1.1",
    "immutable": "^4.0.0-rc.14",
    "lodash": "^4.17.21",
    "next": "10.2.3",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-autosuggest": "^10.1.0",
    "react-dom": "^17.0.1",
    "react-highlight": "^0.14.0",
    "react-popper-tooltip": "^4.3.0",
    "react-table": "^7.7.0",
    "shortid": "^2.2.16",
    "tailwindcss": "^2.1.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.13.13",
    "autoprefixer": "^10.2.6",
    "cssnano": "^5.0.6",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.5",
    "prejss-cli": "^0.3.3",
    "replace-in-file": "^6.2.0",
    "rtlcss": "^3.3.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
